@using System.Reflection
@using CodingTest.Models
@model IEnumerable<CodingTest.Models.Reading>
<p>
    @Html.ActionLink("Create New Mag", "Create", new { readingType = "Reading" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Depth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MagX)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MagY)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxZ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalMag)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Depth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MagX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MagY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxZ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalMag)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, readingType = "Reading" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, readingType = "Reading" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, readingType = "Reading" })
            </td>
        </tr>
    }

</table>
